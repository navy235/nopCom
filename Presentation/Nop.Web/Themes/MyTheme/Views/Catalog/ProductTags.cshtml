@model IList<ProductTagModel>
@using Nop.Web.Models.Catalog;
@if (Model != null && Model.Count > 0)
{
    
    <div class="pro-specs-box">
        <p class="pro-specs-title">@T("Products.Tags") </p>
        <div class="pro-specs-info">
            <ul class="pro-tag-list clearfix">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <li class="tag">
                        <a href="@Url.RouteUrl("ProductsByTag", new { productTagId = Model[i].Id, SeName = Model[i].SeName })" class="producttag">
                            @Model[i].Name @T("Products.Tags.Count", Model[i].ProductCount)</a></li>
                   
                }
            </ul>
        </div>
    </div>


}