@model IList<ProductSpecificationModel>
@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <div class="pro-specs-box">
        <p class="pro-specs-title">@T("Products.Specs") </p>
        <div class="pro-specs-info">
            <table class="specs-table">
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];
                        <tr @(i % 2 == 0 ? Html.Raw(" class=\"odd\"") : Html.Raw(" class=\"even\""))>
                            <td class="pro-specs-name">
                                @item.SpecificationAttributeName
                            </td>
                            <td class="pro-specs-value">
                                @item.SpecificationAttributeOption
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}