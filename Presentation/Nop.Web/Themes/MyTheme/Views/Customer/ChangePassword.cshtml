@model ChangePasswordModel
@using Nop.Web.Models.Customer;
@{
    Layout = "~/Views/Shared/_ColumnsTwo.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.Account").Text);
}
@section left
{
    @Html.Partial("MyAccountNavigation", Model.NavigationModel, new ViewDataDictionary())
}

@section  bread{
    <div class="breadcrumbs">
        <a href="@Url.RouteUrl("CustomerInfo")" >@T("Account.MyAccount") </a>
        &nbsp;&gt;&nbsp; @T("Account.ChangePassword")
    </div>
}
<div class="order-list">

    @if (!String.IsNullOrEmpty(Model.Result))
    {
        <div class="form-result-tips">
            <i class="icon-help"></i>
            @Model.Result
            <a href="javascript:void(0);" onclick="$(this).parent().hide()"><i class="icon-help-close"></i></a>
        </div>
    }

    @if (!Model.Success)
    { 
        <div class="form-result-tips">
            <i class="icon-help"></i>
            @Html.ValidationSummary()
            <a href="javascript:void(0);" onclick="$(this).parent().hide()"><i class="icon-help-close"></i></a>
        </div>
    }



    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-container bordered">
            <div class="form-header">
                <h3 class="bg">@T("Account.ChangePassword")</h3>
            </div>
            <div class="form-fields">
                <div class="form-group  clearfix ">
                    <label class="form-label">
                        @Html.RequiredHint()
                        @T("Account.ChangePassword.Fields.OldPassword")</label>

                    @Html.PasswordFor(model => model.OldPassword, new { @class = "ui-input large " })
                    <span class="ui-tooltips arrow-left-center warning hidden">
                        <i class="icon"></i>
                        @Html.ValidationMessageFor(model => model.OldPassword)
                    </span>
                </div>
                <div class="form-group  clearfix ">
                    <label class="form-label">
                        @Html.RequiredHint()
                        @T("Account.ChangePassword.Fields.NewPassword")</label>

                    @Html.PasswordFor(model => model.NewPassword, new { @class = "ui-input large " })
                    <span class="ui-tooltips arrow-left-center warning hidden">
                        <i class="icon"></i>
                        @Html.ValidationMessageFor(model => model.NewPassword)
                    </span>
                </div>
                <div class="form-group  clearfix ">
                    <label class="form-label">
                        @Html.RequiredHint()
                        @T("Account.ChangePassword.Fields.ConfirmNewPassword")</label>

                    @Html.PasswordFor(model => model.ConfirmNewPassword, new { @class = "ui-input large " })
                    <span class="ui-tooltips arrow-left-center warning hidden">
                        <i class="icon"></i>
                        @Html.ValidationMessageFor(model => model.ConfirmNewPassword)
                    </span>
                </div>
                <div class="form-submit">
                    <input type="submit" value="@T("Account.ChangePassword.Button")" name="save-info-button" class="ui-button primary huge" />
                </div>
            </div>

        </div>
    }
</div>
